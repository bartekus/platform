{
  "name": "platform",
  "private": true,
  "version": "0.0.1",
  "description": "Logto React SDK + Encore.ts API Starter with local HTTPS",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "encore build docker --config ./infra-config.json backend",
    "test": "vitest",
    "pret": "prettier --write --ignore-unknown",
    "db:stripe": "cd apps/backend/stripe && npx drizzle-kit generate && cd - || exit",
    "stripe:local": "dotenv -- stripe listen --forward-to https://backend.localdev.online/stripe/webhooks",
    "stripe:setup": "./scripts/stripe/stripe-setup.sh",
    "stripe:sync": "./scripts/stripe/stripe-sync.sh",
    "stripe:wh-check": "./scripts/stripe/stripe-webhook-check.sh",
    "stripe:destroy": "./scripts/stripe/stripe-destroy.sh",
    "trigger:login": "dotenv -- pnpm dlx trigger.dev@v3 login -a https://trigger.oitd.org"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@types/busboy": "^1.5.4",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "encore.dev": "^1.50.0",
    "lru-cache": "^11.2.2",
    "jose": "^6.1.0",
    "busboy": "^1.6.0",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "stripe": "^17.6.0",
    "zod": "^4.1.11"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.52.3"
  }
}
